{
  "manifest_version": 3,
  "name": "Health Plan Helper",
  "version": "1.0.0",
  "description": "Seleciona plano, abre portal, copia scripts para colar no Console (F12). Dados v\u00eam do Cloud Run.",
  "action": {
    "default_title": "Health Plan Helper",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}