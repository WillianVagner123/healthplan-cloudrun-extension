{
  "manifest_version": 3,
  "name": "O Maskara",
  "version": "1.0.0",
  "description": "Executa scripts diretamente no site aberto.",
  "action": {
    "default_title": "O Maskara",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
