{
  "manifest_version": 3,
  "name": "O Maskara",
  "description": "Automação de autorizações em portais de planos de saúde via Cloud Run.",
  "version": "1.0.0",

  "action": {
    "default_title": "O Maskara",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],

  "host_permissions": [
    "https://healthplan-api-153673459631.southamerica-east1.run.app/*",
    "https://accounts.google.com/*",
    "https://openidconnect.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "injected.js",
        "runnerBase.js",
        "data/**"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "oauth2": {
    "client_id": "153673459631-pl6d38ipsseh83f1qk3d3et8d7c6jfov.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  }
}
